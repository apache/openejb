    <!-- =================== -->
    <!-- Build Specification -->
    <!-- =================== -->

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/schema</directory>
                    <includes>
                        <include>*.xsd</include>
                        <include>*.dtd</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>
