<!--
When transactional resources are provided by Tyrex, they are defined
here.
-->

<domain>
	<name>default</name>
	<resources>
        <!-- 
        Here we describe a data source. Add a datasource
        section per data source.
        -->
        
        <!--
        This name is used by TyRex to locate the resource.  OpenEJB also uses it
        to ask TyRex for the resource.  It is this name that you use in the
        OpenEJB configuration file.
        -->
        <dataSource>
            <name>Default JDBC Database</name> 
            <jar>lib/idb_3.26.jar</jar>
            <class>tyrex.resource.jdbc.xa.EnabledDataSource</class>
            <config>
        		<driverClassName>org.enhydra.instantdb.jdbc.idbDriver</driverClassName>
                <driverName>jdbc:idb:conf/default.idb_database.conf</driverName>
                <user>user</user>
                <password>password</password>
          </config>
        </dataSource>
    </resources>
</domain>

